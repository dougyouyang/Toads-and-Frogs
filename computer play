#include <iostream>

using namespace std;

int main()
{
    //variable
    int n;
    int counter, counter2, counter3, counter4, counter5, counter6;
    int movec = 0;
    bool m = false;


    //enter the board size
    while(!m){
        cout << "please enter the board size" << endl;
        cin >> n;
        if(n%2 == 1 && n != 1){
            m = true;
        }
    }
    m = false;
    counter4 = n/2;
    counter6 = n;


    //make the board
    int a[n];
    a[n/2] = 0;
    for(counter = 0; counter <= n/2-1; counter++){
        a[counter] = 1;
    }
    for(counter = n/2+1; counter < n; counter++){
        a[counter] = 2;
    }

    //output the board
    for(counter5 = 0; counter5 < n; counter5++){
        if(counter5 > 8){
            cout << counter5+1 << " ";
        }
        else{
            cout << counter5+1 << "  ";
        }
    }
    cout << endl;
    for(counter5 = 0; counter5 < n; counter5++){
        if(a[counter5] == 1){
            cout << "T  ";
        }
        if(a[counter5] == 2){
            cout << "F  ";
        }
        if(a[counter5] == 0){
            cout << "-  ";
        }
    }
    cout << endl;
    cout << endl;

    //check what's the value of n
    counter = n/2;
    if(counter%2 == 1){
        m = true;
    }
    counter = 0;


    //first term loop
    while(counter < (n/4)*2-2){
        //update the board from small to large
        counter2 = counter+3;
        for(counter3 = 0; counter3 < counter2; counter3++){
            for(counter5 = 0; counter5 < n; counter5++){
                if(a[counter5] == 0){
                    a[counter5] = a[counter4-1];
                    break;
                }
            }
            a[counter4-1] = 0;
            if(counter3 < counter2-2){
                counter4 += 2;
            }
            else{
                counter4++;
            }
            //output the board
            movec++;
            cout << "step " << movec << endl;
            for(counter5 = 0; counter5 < n; counter5++){
                if(counter5 > 8){
                    cout << counter5+1 << " ";
                }
                else{
                    cout << counter5+1 << "  ";
                }
            }
            cout << endl;
            for(counter5 = 0; counter5 < n; counter5++){
                if(a[counter5] == 1){
                    cout << "T  ";
                }
                if(a[counter5] == 2){
                    cout << "F  ";
                }
                if(a[counter5] == 0){
                    cout << "-  ";
                }
            }
            cout << endl;
            cout << endl;
        }
        counter4 -= 3;

        //check if end
        if(!m && counter == (n/4)*2-3){
            break;
        }

        //check weather to add
        if(counter > 0){
            counter++;
        }

        //from large to small
        counter2 = counter+3;
        for(counter3 = 0; counter3 < counter2; counter3++){
            for(counter5 = 0; counter5 < n; counter5++){
                if(a[counter5] == 0){
                    a[counter5] = a[counter4-1];
                    break;
                }
            }
            a[counter4-1] = 0;
            if(counter3 < counter2-2){
                counter4 -= 2;
            }
            else{
                counter4--;
            }
            //output the board
            movec++;
            cout << "step " << movec << endl;
            for(counter5 = 0; counter5 < n; counter5++){
                if(counter5 > 8){
                    cout << counter5+1 << " ";
                }
                else{
                    cout << counter5+1 << "  ";
                }
            }
            cout << endl;
            for(counter5 = 0; counter5 < n; counter5++){
                if(a[counter5] == 1){
                    cout << "T  ";
                }
                if(a[counter5] == 2){
                    cout << "F  ";
                }
                if(a[counter5] == 0){
                    cout << "-  ";
                }
            }
            cout << endl;
            cout << endl;
        }
        counter++;
        counter4 += 3;
    }



    //second term loop
    //if n/2 is odd
    if(m && n > 7){
        counter2 = 1;
        counter3 = 0;
        counter4 = n/2;
        for(counter = 0; counter < counter4; counter4--){
            //update the board from small to large
            for(counter3 += 3; counter3 <= counter6; counter3 += 2){
                for(counter5 = 0; counter5 < n; counter5++){
                    if(a[counter5] == 0){
                        a[counter5] = a[counter3-1];
                        break;
                    }
                }
                a[counter3-1] = 0;
                //output the board
                movec++;
                cout << "step " << movec << endl;
                for(counter5 = 0; counter5 < n; counter5++){
                    if(counter5 > 8){
                        cout << counter5+1 << " ";
                    }
                    else{
                        cout << counter5+1 << "  ";
                    }
                }
                cout << endl;
                for(counter5 = 0; counter5 < n; counter5++){
                    if(a[counter5] == 1){
                        cout << "T  ";
                    }
                    if(a[counter5] == 2){
                        cout << "F  ";
                    }
                    if(a[counter5] == 0){
                        cout << "-  ";
                    }
                }
                cout << endl;
                cout << endl;
            }

            //check if ends
            if(counter4 == 1){
                break;
            }

            //check weather to subtract
            if(counter4 != n/2){
                counter4--;
            }

            //from large to small
            for(counter3 -= 3; counter3 >= counter2; counter3 -= 2){
                for(counter5 = 0; counter5 < n; counter5++){
                    if(a[counter5] == 0){
                        a[counter5] = a[counter3-1];
                        break;
                    }
                }
                a[counter3-1] = 0;
                //output the board
                movec++;
                cout << "step " << movec << endl;
                for(counter5 = 0; counter5 < n; counter5++){
                    if(counter5 > 8){
                        cout << counter5+1 << " ";
                    }
                    else{
                        cout << counter5+1 << "  ";
                    }
                }
                cout << endl;
                for(counter5 = 0; counter5 < n; counter5++){
                    if(a[counter5] == 1){
                        cout << "T  ";
                    }
                    if(a[counter5] == 2){
                        cout << "F  ";
                    }
                    if(a[counter5] == 0){
                        cout << "-  ";
                    }
                }
                cout << endl;
                cout << endl;
            }
            counter6 -= 2;
            counter2 += 2;
        }
    }

    //if n/2 is even
    else if(!m && n > 7){
        counter2 = 1;
        counter3 = n+1;
        counter4 = n/2;
        for(counter = 0; counter < counter4; counter4--){
            //update the board from small to large
            for(counter3 -= 3; counter3 >= counter2; counter3 -= 2){
                for(counter5 = 0; counter5 < n; counter5++){
                    if(a[counter5] == 0){
                        a[counter5] = a[counter3-1];
                        break;
                    }
                }
                a[counter3-1] = 0;
                //output the board
                movec++;
                cout << "step " << movec << endl;
                for(counter5 = 0; counter5 < n; counter5++){
                    if(counter5 > 8){
                        cout << counter5+1 << " ";
                    }
                    else{
                        cout << counter5+1 << "  ";
                    }
                }
                cout << endl;
                for(counter5 = 0; counter5 < n; counter5++){
                    if(a[counter5] == 1){
                        cout << "T  ";
                    }
                    if(a[counter5] == 2){
                        cout << "F  ";
                    }
                    if(a[counter5] == 0){
                        cout << "-  ";
                    }
                }
                cout << endl;
                cout << endl;
            }

            //check if ends
            if(counter4 == 1){
                break;
            }

            //check weather to subtract
            if(counter4 != n/2){
                counter4--;
            }

            //from large to small
            for(counter3 += 3; counter3 <= counter6; counter3 += 2){
                for(counter5 = 0; counter5 < n; counter5++){
                    if(a[counter5] == 0){
                        a[counter5] = a[counter3-1];
                        break;
                    }
                }
                a[counter3-1] = 0;
                //output the board
                movec++;
                cout << "step " << movec << endl;
                for(counter5 = 0; counter5 < n; counter5++){
                    if(counter5 > 8){
                        cout << counter5+1 << " ";
                    }
                    else{
                        cout << counter5+1 << "  ";
                    }
                }
                cout << endl;
                for(counter5 = 0; counter5 < n; counter5++){
                    if(a[counter5] == 1){
                        cout << "T  ";
                    }
                    if(a[counter5] == 2){
                        cout << "F  ";
                    }
                    if(a[counter5] == 0){
                        cout << "-  ";
                    }
                }
                cout << endl;
                cout << endl;
            }
            counter6 -= 2;
            counter2 += 2;
        }
    }

    //if n is too small
    if(n == 3){
        cout << endl;
        cout << "step 1" << endl;
        cout << "1  2  3" << endl;
        cout << "-  T  F" << endl;
        cout << endl;
        cout << "step 2" << endl;
        cout << "1  2  3" << endl;
        cout << "F  T  -" << endl;
        cout << endl;
        cout << "step 3" << endl;
        cout << "1  2  3" << endl;
        cout << "T  -  F" << endl;
        cout << endl;
        cout << "I got it in 3 steps!" << endl;
    }

    else if(n == 5){
        cout << endl;
        cout << "step 1" << endl;
        cout << "1  2  3  4  5" << endl;
        cout << "T  -  T  F  F" << endl;
        cout << endl;
        cout << "step 2" << endl;
        cout << "1  2  3  4  5" << endl;
        cout << "T  F  T  -  F" << endl;
        cout << endl;
        cout << "step 3" << endl;
        cout << "1  2  3  4  5" << endl;
        cout << "T  F  T  F  -" << endl;
        cout << endl;
        cout << "step 4" << endl;
        cout << "1  2  3  4  5" << endl;
        cout << "T  F  -  F  T" << endl;
        cout << endl;
        cout << "step 5" << endl;
        cout << "1  2  3  4  5" << endl;
        cout << "-  F  T  F  T" << endl;
        cout << endl;
        cout << "step 6" << endl;
        cout << "1  2  3  4  5" << endl;
        cout << "F  -  T  F  T" << endl;
        cout << endl;
        cout << "step 7" << endl;
        cout << "1  2  3  4  5" << endl;
        cout << "F  F  T  -  T" << endl;
        cout << endl;
        cout << "step 8" << endl;
        cout << "1  2  3  4  5" << endl;
        cout << "F  F  -  T  T" << endl;
        cout << endl;
        cout << "I got it in 8 steps!" << endl;
    }

    else if(n == 7){
        cout << endl;
        cout << "step 1" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "T  T  -  T  F  F  F" << endl;
        cout << endl;
        cout << "step 2" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "T  T  F  T  -  F  F" << endl;
        cout << endl;
        cout << "step 3" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "T  T  F  T  F  -  F" << endl;
        cout << endl;
        cout << "step 4" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "T  T  F  -  F  T  F" << endl;
        cout << endl;
        cout << "step 5" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "T  -  F  T  F  T  F" << endl;
        cout << endl;
        cout << "step 6" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "-  T  F  T  F  T  F" << endl;
        cout << endl;
        cout << "step 7" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "F  T  -  T  F  T  F" << endl;
        cout << endl;
        cout << "step 8" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "F  T  F  T  -  T  F" << endl;
        cout << endl;
        cout << "step 9" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "F  T  F  T  F  T  -" << endl;
        cout << endl;
        cout << "step 10" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "F  T  F  T  F  -  T" << endl;
        cout << endl;
        cout << "step 11" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "F  T  F  -  F  T  T" << endl;
        cout << endl;
        cout << "step 12" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "F  -  F  T  F  T  T" << endl;
        cout << endl;
        cout << "step 13" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "F  F  -  T  F  T  T" << endl;
        cout << endl;
        cout << "step 14" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "F  F  F  T  -  T  T" << endl;
        cout << endl;
        cout << "step 15" << endl;
        cout << "1  2  3  4  5  6  7" << endl;
        cout << "F  F  F  -  T  T  T" << endl;
        cout << endl;
        cout << "I got it in 15 steps!" << endl;
    }

    //result
    if(n > 7){
        cout << "I got it in " << movec << " steps!" << endl;
    }

    return 0;
}
